<% if @book.errors.any? %>
        <p> error </p>
      <% end %>
<div class="container">
  <div class="row">
    <div class='col-md-6 col-md-offset-3'>
    	<h1>Editing Book</h1>
    	<%= form_for(@book) do |f| %>
    	<label class="title">Title</label>
    	<%= f.text_field :title %><br>
    	<label class="body">Opinion</label>
    	<%= f.text_area :body %>
    	<%= f.submit "Update Book" %>
    	<% end %>
    </div>
  </div>
</div>