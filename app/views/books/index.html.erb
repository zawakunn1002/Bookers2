<% if @book.errors.any? %>
        <p> error </p>
      <% end %>
<div class ="container">
  <div class ="row">
  	<div class="col-xs-3">
  	    <h2> User info</h2>
  	        <table class="table">
  	      	  <tbody>
  	      	  	<tr>
                  <%= attachment_image_tag @user,:profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                <tr>
  	      	  	  <th> name</th>
  	      	  	  <th>
  	      	  	  <%= @user.name %>
  	      	  	  </th>
  	      	  	</tr>
  	      	  	<tr>
  	      	  	  <th> introduction</th>
  	      	  	  <th>
  	      	  	  <%= @user.introduction %>
  	      	  	  </th>
  	      	  	</tr>
  	      	  </tbody>
  	        </table>
  	        <div class="row">
	  	        <%= link_to edit_user_path(current_user.id), class: "col-xs-12 btn btn-default" do %>
	  	            <span class = "glyphicon glyphicon-wrench"></span>
	  	        <% end %>
  	        </div>
  	        <h2> New Book</h2>
  	        <%= form_for(@book) do |f| %>
              <h2>Title</h2>
              <%= f.text_field :title %>
              <h2> Opinion</h2>
              <%= f.text_area :body %>

              <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
            <% end %>
    </div>
    <div class="col-xs-9">
      <h2> Books</h2>
         <table class="table table-hover table-inverse">
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>